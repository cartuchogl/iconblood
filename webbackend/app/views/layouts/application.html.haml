!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'reset'
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'MooEditable'
    = javascript_include_tag 'mootools-1.2.4-core'
    = javascript_include_tag 'mootools-1.2.4.4-more'
    = javascript_include_tag 'MooEditable'
    = javascript_include_tag 'application'
    = yield(:head)
  
  %body
    %ul#menu
      %li= link_to 'Factions', factions_path
      %li= link_to 'Backgrounds', backgrounds_path
      %li= link_to 'Campaigns', campaigns_path
      %li= link_to 'Environments', environments_path
      %li= link_to 'Games', games_path
      %li= link_to 'Images', images_path
      %li= link_to 'Levels', levels_path
      %li= link_to 'Pages', pages_path
      %li= link_to 'Players', players_path
      %li= link_to 'Squadrons', squadrons_path
      %li= link_to 'Squadron Units', squadron_units_path
      %li= link_to 'Unit', units_path
      %li= link_to 'Unit Options', unit_options_path
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      - if show_title?
        - content_tag :h1, :class => yield(:title).downcase.dasherize do
          =h yield(:title)
      = yield
      .clear
    #footer
      %p
        Lorem ipsum forever rulez!
