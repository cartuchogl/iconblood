- form_for @environment, :html => {:multipart => true} do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :image_id
    %br
    - if @environment.image
      = image_tag @environment.image.data.url(:thumb)
    = file_field_tag "attachfile"
  %p
    = f.submit
