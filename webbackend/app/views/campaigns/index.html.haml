- title "Campaigns"

%p.model_actions= link_to "New Campaign", new_campaign_path

%table#main_table
  %tr
    %th Image
    %th Background
    %th
  - for campaign in @campaigns
    %tr
      %td= image_tag campaign.image.data.url(:thumb) if campaign.image
      %td= h campaign.background_id
      %td
        = link_to 'Show', campaign
        |
        = link_to 'Edit', edit_campaign_path(campaign)
        |
        = link_to 'Destroy', campaign, :confirm => 'Are you sure?', :method => :delete

