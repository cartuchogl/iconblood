- form_for @page do |f|
  = f.error_messages
  %p
    = f.label :position
    %br
    = f.text_field :position
  %p
    = f.label :image_id
    %br
    = f.text_field :image_id
  %p
    = f.label :background_id
    %br
    = f.text_field :background_id
  %p
    = f.label :txt
    %br
    = f.text_area :txt
  %p
    = f.submit
