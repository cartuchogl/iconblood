- title "Pages"

%p.model_actions= link_to "New Page", new_page_path

%table#main_table
  %tr
    %th Position
    %th Image
    %th Background
    %th Txt
    %th
  - for page in @pages
    %tr
      %td= h page.position
      %td= h page.image_id
      %td= h page.background_id
      %td= h page.txt
      %td
        = link_to 'Show', page
        |
        = link_to 'Edit', edit_page_path(page)
        |
        = link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete

